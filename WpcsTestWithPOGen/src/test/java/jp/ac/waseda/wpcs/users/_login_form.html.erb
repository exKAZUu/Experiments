<h2>Login</h2>
<%= form_tag({:controller=>:users, :action=>:authorize}) do %>
  <div class="field" lang="__pogen_74">
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div class="field" lang="__pogen_75">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions" lang="__pogen_76">
    <%= submit_tag :login %>
  </div>
<% end %>
